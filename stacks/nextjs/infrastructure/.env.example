# Next.js Environment Configuration
# Copy this file to .env.local and fill in the values

# Application
NODE_ENV=development
NEXT_PUBLIC_APP_URL=http://localhost:3000

# API
NEXT_PUBLIC_API_URL=http://localhost:4000
API_SECRET_KEY=your_api_secret_key

# Database (if using Prisma)
DATABASE_URL="postgresql://postgres:postgres@localhost:5432/app_development?schema=public"

# Authentication (NextAuth.js)
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=generate_with_openssl_rand_base64_32

# OAuth Providers
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GITHUB_CLIENT_ID=
GITHUB_CLIENT_SECRET=

# Email (Resend, SendGrid, etc.)
RESEND_API_KEY=
EMAIL_FROM=noreply@example.com

# Storage (S3, Cloudflare R2, etc.)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=us-east-1
AWS_BUCKET_NAME=

# Redis (optional)
REDIS_URL=redis://localhost:6379

# Error Tracking
NEXT_PUBLIC_SENTRY_DSN=
SENTRY_AUTH_TOKEN=

# Analytics
NEXT_PUBLIC_POSTHOG_KEY=
NEXT_PUBLIC_POSTHOG_HOST=

# Feature Flags
# NEXT_PUBLIC_FEATURE_NEW_DASHBOARD=true

# Vercel (auto-populated on Vercel)
# VERCEL_URL=
# VERCEL_ENV=
