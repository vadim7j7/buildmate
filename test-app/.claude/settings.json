{
  "pm": {
    "git_workflow": "none",
    "multi_repo": {
      "enabled": true,
      "repositories": {
        "web": "./web",
        "backend": "./backend"
      },
      "stack_repo_map": {
        "nextjs": "web",
        "fastapi": "backend"
      }
    }
  },
  "permissions": {
    "allow": [
      "Read",
      "Edit",
      "Write",
      "Bash(git *)",
      "Bash(gh *)",
      "Bash(ls *)",
      "Bash(mkdir *)",
      "Bash(cat *)",
      "Bash(head *)",
      "Bash(tail *)",
      "Bash(wc *)",
      "Bash",
      "Glob",
      "Grep",
      "Task",
      "TodoWrite",
      "WebFetch",
      "WebSearch",
      "mcp__dashboard__dashboard_register_task",
      "mcp__dashboard__dashboard_create_subtask",
      "mcp__dashboard__dashboard_update_status",
      "mcp__dashboard__dashboard_update_phase",
      "mcp__dashboard__dashboard_log",
      "mcp__dashboard__dashboard_ask_question",
      "mcp__dashboard__dashboard_get_task",
      "mcp__dashboard__dashboard_add_artifact"
    ],
    "deny": []
  },
  "mcpServers": {
    "puppeteer": {
      "command": "npx",
      "args": [
        "-y",
        "@anthropic-ai/mcp-server-puppeteer"
      ]
    },
    "dashboard": {
      "command": ".dashboard/.venv/bin/mcp-dashboard-tools",
      "env": {
        "DASHBOARD_DB_PATH": ".dashboard/tasks.db"
      }
    }
  },
  "hooks": {
    "PostToolUse": [
      {
        "matcher": "Edit|Write|NotebookEdit",
        "hooks": [
          {
            "type": "command",
            "command": ".claude/hooks/track-changes.sh",
            "blocking": false
          }
        ]
      },
      {
        "matcher": "Task",
        "hooks": [
          {
            "type": "command",
            "command": ".claude/hooks/task-complete.sh",
            "blocking": false
          }
        ]
      }
    ],
    "Stop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": ".claude/hooks/session-end.sh",
            "blocking": false
          }
        ]
      }
    ]
  }
}
